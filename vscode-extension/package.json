{
  "name": "claude-persona-switcher",
  "displayName": "Claude Persona Switcher",
  "description": "Switch Claude Code personas per-folder with status bar UI",
  "version": "0.1.0",
  "publisher": "bri",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claudePersona.switch",
        "title": "Claude: Switch Persona"
      },
      {
        "command": "claudePersona.detect",
        "title": "Claude: Auto-Detect Persona"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
